{
  "markup": {
    "goldmark": {
      "renderer": {
        "unsafe": true
      }
    }
  },
  "baseURL": "https://shoya.io/",
  "languageCode": "en-us",
  "title": "shoya.io",
  "pygmentscodefences": true,
  "pygmentsstyle": "monokai",
  "taxonomies": {
    "tag": "tags"
  },
  "frontmatter": {
    "date": [
      ":filename",
      ":default"
    ]
  },
  "enableGitInfo": true,
  "enableRobotsTXT": true,
  "footnoteReturnLinkContents": "↩",
  "hasCJKLanguage": true,
  "summaryLength": 80,
  "related": {
    "threshold": 50,
    "includeNewer": true,
    "indices": [
      {"name": "keywords", "weight": 100},
      {"name": "tags", "weight": 50},
      {"name": "date", "weight": 20}
    ]
  },
  "params": {
    "eyecatch": "/img/icon_dot_small.png",
    "navigation": [
      {
        "name": "projects",
        "display": "Projects"
      },
      {
        "name": "publications",
        "display": "Publications"
      },
      {
        "name": "software",
        "display": "Software"
      },
      {
        "name": "posts",
        "display": "Blog"
      }
    ]
  },
  "outputFormats" : {
    "RSS": {
      "baseName": "feed"
    }
  },
  "DefaultContentLanguage": "en",
  "Languages": {
    "en": {
      "params": {
        "language": "English page",
        "researchProject": "Research Projects",
        "privateProject": "Private Projects",
        "updatedOn": "Updated on",
        "related": "Related posts",
        "previousAndNext": "Previous and next posts",
        "andMore": "... and more posts in English"
      }
    },
    "ja": {
      "params": {
        "language": "日本語のページ",
        "researchProject": "研究プロジェクト",
        "privateProject": "個人開発プロジェクト",
        "UpdatedOn": "最終更新日:",
        "related": "関連記事",
        "previousAndNext": "前後の記事",
        "andMore": "日本語の最新の記事"
      }
    }
  }
}